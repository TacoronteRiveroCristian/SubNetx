// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// User model for storing user credentials and roles
model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  role      String   @default("viewer")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users") // This maps the model to a table named "users"
}

// System settings model for storing global application state
model SystemSettings {
  id            Int      @id @default(autoincrement())
  key           String   @unique
  value         String
  lastUpdated   DateTime @updatedAt

  @@map("system_settings") // This maps the model to a table named "system_settings"
}
